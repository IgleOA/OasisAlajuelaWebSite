@model IEnumerable<ET.Banner>

@{ Layout = null; }

<script src="~/Scripts/jquery-3.5.0.min.js"></script>
<div class="p-0 m-0 w-100 justify-content-center">
    <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                if (item.Slide == 0)
                {
                    <div class="carousel-item active animated fadeIn" style="-webkit-animation-duration: 5s; animation-duration: 5s;">
                        <img src='@item.BannerPath' class="d-block" title="@item.BannerName" style="width: 100% !important; max-height: 100%!important;">
                    </div>
                }
                else
                {
                    <div class="carousel-item animated fadeIn" style="-webkit-animation-duration: 5s; animation-duration: 5s;">
                        <img src='@item.BannerPath' class="d-block" title="@item.BannerName" style="width: 100% !important; max-height: 100%!important;">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<script src="~/Scripts/popper.min.js"></script>