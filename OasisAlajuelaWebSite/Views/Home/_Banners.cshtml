@model IEnumerable<ET.Banner>

@{ Layout = null; }

<script src="~/Scripts/jquery-3.5.0.min.js"></script>
<div class="container p-0 justify-content-center">
    <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                var base64 = Convert.ToBase64String(item.BannerData, 0, item.BannerData.Length);
                var imgSrc = string.Format("data:image/{0};base64,{1}", item.BannerExt, base64);
                var text = imgSrc;
                if (item.Slide == 0)
                {
                    <div class="carousel-item active animated fadeIn" style="-webkit-animation-duration: 5s; animation-duration: 5s;">
                        <img src='@imgSrc' class="d-block" title="@item.BannerName" style="width: 100% !important; max-height: 500px !important; border-radius: 20px;">
                    </div>
                }
                else
                {
                    <div class="carousel-item animated fadeIn" style="-webkit-animation-duration: 5s; animation-duration: 5s;">
                        <img src='@imgSrc' class="d-block" title="@item.BannerName" style="width: 100% !important; max-height: 500px !important; border-radius: 20px;">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<script src="~/Scripts/popper.min.js"></script>