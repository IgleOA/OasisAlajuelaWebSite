@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div id="header" class="headerFixed" style="z-index:-1;position:relative;">

</div>
<div class="card bg-light ftco-animate animated fadeInUp">
