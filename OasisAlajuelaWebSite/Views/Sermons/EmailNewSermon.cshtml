@model ET.SermonEmail

@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>Email confirmation</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />

</head>

<body style="margin: 0; padding: 0;">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td style="padding: 10px 0 10px 0;">
                <table align="center" border="1" cellpadding="0" cellspacing="0" width="600" style="border-collapse: collapse; font-family: Poppins, sans-serif;">
                    <tr>
                        <td align="center" style="padding: 0;">
                            <img src="https://oasisalajuela.com/Images/fondo.png" alt="Oasis Alajuela" width="600" height="230" style="display: block;" />
                        </td>
                    </tr>
                    <tr>
                        <td bgcolor="#ffffff" style="padding: 20px 30px 20px 30px;">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tr>
                                    <td align="center">
                                        <h4 style="text-transform: uppercase; font-weight:700!important; font-size:1.5rem!important; margin:0.5rem!important">Nueva Prédica Disponible</h4>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center">
                                        <table style="margin-top: 1rem !important; width: 100%!important;">
                                            <tbody>
                                                <tr>
                                                    <td align="center" style="padding:0!important; width:100%!important">
                                                       
                                                        
                                                        <hr style="margin:0 0 0.5rem 0!important;" />                                                        
                                                            <div style="display: flex;
                                                                        flex-wrap: wrap;
                                                                        margin-right: -15px;
                                                                        margin-left: -15px;
                                                                        margin-bottom: 0.5rem!important;">
                                                                <div style="flex-basis: 0;
                                                                            flex-grow:1;
                                                                            max-width:100%;
                                                                            justify-content:flex-start!important;
                                                                            margin:auto!important;">
                                                                    <div style="margin-bottom:0.5rem!important; margin-top:0.5rem!important;">
                                                                        <div style="padding: 0!important">
                                                                            <a href="https://oasisalajuela.com/Sermons/" target="_blank" style="text-transform: uppercase;
                                                                                                                                                display: inline-block;
                                                                                                                                                padding: 4px 10px;
                                                                                                                                                margin-bottom: 7px;
                                                                                                                                                margin-right: 4px;
                                                                                                                                                border-radius: 4px;
                                                                                                                                                color: #000000;
                                                                                                                                                border: 1px solid #ccc;
                                                                                                                                                font-size: 11px;">
                                                                                <img src="@Model.ImageURL" width="320" style="vertical-align: middle;" />
                                                                            </a>                                                                            
                                                                        </div>
                                                                    </div>
                                                                    <h3 style="margin-bottom:0.5rem!important">
                                                                        <a href="https://oasisalajuela.com/Sermons/" target="_blank" style="font-weight:700!important;font-size: 1.75rem; color: rgb(0,123,255);">@Model.Title</a>
                                                                    </h3>
                                                                    <h4 style="margin:0!important; font-weight:700!important;font-size: 1.25rem;">@Model.MinisterName</h4>
                                                                    <p style="margin-bottom: 0.5rem!important; justify-content:flex-start;">
                                                                        @Model.Description
                                                                    </p>
                                                                </div>
                                                            </div>                                                                
                                                        <hr style="margin:0!important;" />
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td class="p-0 justify-content-start">
                                                        <p class="my-2 w-100 text-justify" style="font-size: 10px;">
                                                            Te enviamos este correo electrónico con las novedades de Oasis Alajuela. Si no deseas seguir recibiendo estas novedades, puedes <a href="https://oasisalajuela.com/Account/RemoveSubscriber/" target="_blank">anular la suscripción aquí</a>.
                                                        </p>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 30px 10px 30px 10px; background-color:wheat;">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                <tr>
                                    <td width="60%">
                                        <p style="margin:0;">
                                            <strong>Oasis Alajuela</strong> &copy;
                                            <script>document.write(new Date().getFullYear());</script>
                                            Derechos reservados
                                        </p>
                                    </td>
                                    <td align="center">
                                        <table style="padding: 0;">
                                            <tr>
                                                <td style="padding: 0 5px 0 5px;">
                                                    <a href="https://twitter.com/oasisalajuela" target="_blank" title="Twitter">
                                                        <img src="https://cdn3.iconfinder.com/data/icons/picons-social/57/43-twitter-512.png" width="40" />
                                                    </a>
                                                </td>
                                                <td style="padding: 0 5px 0 5px;">
                                                    <a href="https://www.facebook.com/OasisAlajuela/" target="_blank" title="Facebook">
                                                        <img src="https://cdn3.iconfinder.com/data/icons/free-social-icons/67/facebook_circle_black-512.png" width="40" />
                                                    </a>
                                                </td>
                                                <td style="padding: 0 5px 0 5px;">
                                                    <a href="https://www.instagram.com/aes_oasis/" target="_blank" title="Instagram">
                                                        <img src="https://cdn4.iconfinder.com/data/icons/picons-social/57/38-instagram-3-512.png" width="40" />
                                                    </a>
                                                </td>
                                                <td style="padding: 0 5px 0 5px;">
                                                    <a href="https://www.youtube.com/channel/UCsWIb3EobSzS-pNrPXvq7_A" target="_blank" title="YouTube">
                                                        <img src="https://cdn1.iconfinder.com/data/icons/andriod-app-logo/32/icon_youtube-512.png" width="40" />
                                                    </a>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>