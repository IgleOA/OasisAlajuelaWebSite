
@{
    ViewBag.Title = "Administrativo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="hp-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="text-center heading-section">
                <h2 class="mb-4">Sección Administrativa</h2>
                <p>Desde esta sección usted puede configurar usuarios, detalles de las paginas publicas y otros.</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-3 d-flex align-self-stretch">
                <div class="media block-6 services d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon d-flex justify-content-center mb-3">
                            <a href='@Url.Action("Index","Users")' target="_blank" title="Usuarios" class="align-self-center">
                                <span class='align-self-center fas fa-users fa-4x'></span>
                            </a>
                        </div>
                    </div>
                    <div class="media-body p-2 mt-3">
                        <h3 class="heading">Usuarios</h3>
                        <p>Administrar usuarios, accessos y permisos.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex align-self-stretch">
                <div class="media block-6 services d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon d-flex justify-content-center mb-3">
                            <a href='@Url.Action("HomePage","Admin")' target="_blank" title="HomePage" class="align-self-center">
                                <span class='align-self-center fas fa-home fa-4x'></span>
                            </a>
                        </div>
                    </div>
                    <div class="media-body p-2 mt-3">
                        <h3 class="heading">HomePage</h3>
                        <p>Administra todo el contenido del HomePage Público.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex align-self-stretch">
                <div class="media block-6 services d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon d-flex justify-content-center mb-3">
                            <a href='@Url.Action("Banners","Admin")' target="_blank" title="Benners" class="align-self-center">
                                <span class='align-self-center fas fa-sign fa-4x'></span>
                            </a>
                        </div>
                    </div>
                    <div class="media-body p-2 mt-3">
                        <h3 class="heading">Banners</h3>
                        <p>Administra todo los banners que aparecen en el HomePage.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 d-flex align-self-stretch">
                <div class="media block-6 services d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon d-flex justify-content-center mb-3">
                            <a href='@Url.Action("UpcomminEvents","Admin")' target="_blank" title="Próximos eventos" class="align-self-center">
                                <span class='align-self-center far fa-calendar-alt fa-4x'></span>
                            </a>
                        </div>
                    </div>
                    <div class="media-body p-2 mt-3">
                        <h3 class="heading">Próximos eventos</h3>
                        <p>Administra todo la lista de Próximos eventos.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

