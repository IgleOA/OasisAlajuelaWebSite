@model PagedList.IPagedList<ET.Users>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    function Activate(UserID) {
        $.ajax({
            url: '@Url.Action("ChangeStatus")',
            data: { id: UserID }
        }).done(function () { location.reload(); });
    }
    function Desactivate(UserID) {
        var x = confirm("Esta seguro que quiere deshabilitar este Usuario???");
        if (x) {
            $.ajax({
                url: '@Url.Action("ChangeStatus")',
                data: { id: UserID }
            }).done(function () { alert('Hecho!!!'); location.reload(); });
        }
    }
    function Create() {
        var url = '@Url.Action("AddNew")';
        window.open(url, '_blank' , 'left=100,top=100,width=500,height=650,toolbar=1,resizable=0');
    }
</script>

<section class="hp-section">
    <div class="container">
        <div class="row justify-content-start">
            <h2 class="heading-section font-weight-bold my-2 p-0">@ViewBag.Title</h2>
        </div>
        @using (Html.BeginForm("Index", "Users", FormMethod.Get))
        {
            <div class="row justify-content-start">
                <div class="form-group input-group p-0 searchfield w-50">
                    <div class="input-group-prepend">
                        <span class="input-group-text w"><i class="fas fa-search"></i></span>
                    </div>
                    @Html.TextBox("SearchString", null, new { @class = "form-control", @placeholder = "Buscar" })
                </div>
                <input type="submit" value="Buscar" class="btn btn-dark alt mt-0 mb-2" style="height: 2.75rem !important;" />
                <input type="button" value="Agregar" class="btn btn-dark alt mt-0 mb-2" style="height: 2.75rem !important;" onclick="Create()" />
            </div>
        }
        <div class="row justify-content-start">
            <table class="table-responsive-xl align-content-center p-0">
                <tbody>
                    <tr class="align-middle">
                        <th class="py-2">@Html.DisplayNameFor(model => model.FirstOrDefault().FullName)</th>
                        <th class="py-2">@Html.DisplayNameFor(model => model.FirstOrDefault().UserName)</th>
                        <th class="py-2">@Html.DisplayNameFor(model => model.FirstOrDefault().RoleName)</th>
                        <th class="text-center py-2">@Html.DisplayNameFor(model => model.FirstOrDefault().ActiveFlag)</th>
                         @if (ViewBag.WriteRight == true)
                        {
                            <th class="text-center py-2" colspan="3">Acción</th>
                        }
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.RoleName)</td>
                           
                            @{
                                var isActive = (item.ActiveFlag ? "Activo" : "Inactivo");
                            }
                            <td class="text-center align-middle">@Html.DisplayFor(modelItem => isActive)</td>
                            @if (ViewBag.WriteRight == true)
                            {
                                <td class="text-center align-middle">
                                    @if (item.ActiveFlag == false)
                                    {
                                        <a href="#" class="card-link" onclick="Activate(@item.UserID)" title="Habilitar"><i class="fas fa-check-circle fa-1x" style="vertical-align: middle; color:green;"></i></a>
                                    }
                                    else
                                    {
                                        <a href="#" class="card-link" onclick="Desactivate(@item.UserID)" title="Deshabilitar"><i class="fas fa-times-circle fa-1x" style="vertical-align: middle; color:red;"></i></a>
                                    }
                                </td>
                                <td class="text-center align-middle">
                                    <a href="#" class="card-link" onclick="Details(@item.UserID)" title="Detalles"><i class="fas fa-user-circle fa-1x" style="vertical-align: middle; color: green;"></i></a>
                                </td>
                                <td class="text-center align-middle">
                                    <a href="#" class="card-link" onclick="Edit(@item.UserID)" title="Editar"><i class="fas fa-user-edit fa-1x" style="vertical-align: middle; color: green;"></i></a>
                                </td>
                             }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row justify-content-start">
            @if (Model.PageCount > 1)
            {
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }), new PagedListRenderOptions() { ContainerDivClasses = new string[] { "p-0" }, UlElementClasses = new string[] { "pagination m-0" } })
            }
        </div>
    </div>
</section>